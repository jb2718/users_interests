<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Code Challenge | Users Interests</title>

    


<link rel="stylesheet" href="../stylesheets/pure-release-0.6.0/pure-min.css">

    <!--[if lte IE 8]>
        <link rel="stylesheet" href="../stylesheets/layouts/side-menu-old-ie.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
        <link rel="stylesheet" href="../stylesheets/layouts/side-menu.css">
    <!--<![endif]-->
  
</head>
<body>

	<div id="layout">
	    <!-- Menu toggle -->
	    <a href="#menu" id="menuLink" class="menu-link">
	        <!-- Hamburger icon -->
	        <span></span>
	    </a>

	    <div id="menu">
	        <div class="pure-menu">
	            <a class="pure-menu-heading" href="/">Main Page</a>

	            <ul class="pure-menu-list">
	            	<%menu_list.each do |name|%>
	                <li class="pure-menu-item"><a href="/<%=name%>" class="pure-menu-link"><%= name.capitalize %></a></li>
	             <%end%>

	                <li class="pure-menu-item"><a href="/add/user" class="pure-menu-link">Add User</a></li>
	            </ul>
	        </div>
	    </div>

	    <div id="main">
	    	<%= yield %>

		    <div class="content">
		    	<p><%= "There are #{@user_count} users with a total of #{@interest_count} interests."%></p>
		    </div>

	    </div>


	</div>


	<script src="../js/ui.js"></script>

</body>
</html>
